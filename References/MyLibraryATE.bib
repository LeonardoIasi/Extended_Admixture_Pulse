	journal = {Conservation Biology},
	author = {Kolbe, Jason J. and Glor, Richard E. and Schettino, Lourdes Rodríguez and Lara, Ada Chamizo and Larson, Allan and Losos, Jonathan B.},
	year = {2007},
	keywords = {ADNmt, anoles, Anolis, biological invasion, distribución nativa, especies invasoras, historia de invasión, invasión biológica, invasion history, invasive species, mtDNA, native-range source populations, poblaciones fuente},
	pages = {1612--1625},
	file = {Snapshot:/home/leonardo_iasi/Zotero/storage/6WB6ZBXH/j.1523-1739.2007.00826.html:text/html}
}


@article{hey_multilocus_2004,
	title = {Multilocus {Methods} for {Estimating} {Population} {Sizes}, {Migration} {Rates} and {Divergence} {Time}, {With} {Applications} to the {Divergence} of {Drosophila} pseudoobscura and {D}. persimilis},
