	year = {2010},
	keywords = {hybridization, gene flow, introgression, hybrid zones, secondary contact, speciation},
	pages = {806--820},
	file = {Full Text PDF:/home/leonardo_iasi/Zotero/storage/AZMY2BKD/Payseur - 2010 - Using differential introgression in hybrid zones t.pdf:application/pdf;Snapshot:/home/leonardo_iasi/Zotero/storage/SP4NWMWD/j.1755-0998.2010.02883.html:text/html}
